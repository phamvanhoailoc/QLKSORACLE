@model WebQLKSORACLE.Models.RoLe

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/ADMIN/Views/Shared/_ADMINLayout.cshtml";
}

<!-- breadcrumb area start -->
<section class="breadcrumb__area box-plr-75">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xxl-12">
                <div class="breadcrumb__wrapper">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                            <li class="breadcrumb-item"><a asp-action="Index">Danh sách quyền truy cập</a></li>
                            <li class="breadcrumb-item active" aria-current="page"><a></a>Xác nhận xóa</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- breadcrumb area end -->
<table class="table table-hover no-margin">
    <tbody>
        <tr>
            <td>ID</td>
            <td>@Model.RoleId</td>
        </tr>
        <tr>
            <td>Tên quyền truy cập</td>
            <td>@Model.TenR</td>
        </tr>
        <tr>
            <td>Mô tả</td>
            <td>
                @if (Model.TrangthaiR == true)
                {
                    <span class="notice notice-blue">Active</span>
                }
                else
                {
                    <span class="notice notice-danger">Block</span>
                }
            </td>
        </tr>
        <tr>
            <td>Xác nhận xóa</td>
            <td>
                <form asp-action="Delete" asp-route-id="@Model.RoleId">
                    <input type="hidden" asp-for="RoleId" />
                    <input type="submit" value="Xác nhận xóa" class="btn btn-default" />
                </form>
            </td>

        </tr>
    </tbody>
</table>
