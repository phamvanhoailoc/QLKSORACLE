@model WebQLKSORACLE.Models.Khachhang

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/ADMIN/Views/Shared/_ADMINLayout.cshtml";
}

<!-- breadcrumb area start -->
<section class="breadcrumb__area box-plr-75">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xxl-12">
                <div class="breadcrumb__wrapper">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                            <li class="breadcrumb-item"><a asp-action="Index">Danh sách khách hàng</a></li>
                            <li class="breadcrumb-item active" aria-current="page"><a></a>Chỉnh sửa khách hàng</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- breadcrumb area end -->
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaKh" />
            <div class="form-group">
                <label asp-for="TenKh" class="control-label">Tên khách hàng</label>
                <input asp-for="TenKh" class="form-control" />
                <span asp-validation-for="TenKh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SdtKh" class="control-label">Số điện thoại khách hàng</label>
                <input asp-for="SdtKh" class="form-control" readonly/>
                <span asp-validation-for="SdtKh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailKh" class="control-label">Email khách hàng</label>
                <input asp-for="EmailKh" class="form-control" readonly/>
                <span asp-validation-for="EmailKh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiachiKh" class="control-label">Địa chỉ khách hàng</label>
                <input asp-for="DiachiKh" class="form-control" />
                <span asp-validation-for="DiachiKh" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="switch primary">
                    <input type="checkbox" asp-for="TrangthaiKh">
                    <label for="TrangthaiKh">Hoạt động</label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
