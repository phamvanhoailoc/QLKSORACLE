@model IEnumerable<WebQLKSORACLE.Models.Loaiphong>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/ADMIN/Views/Shared/_ADMINLayout.cshtml";
}

<!-- breadcrumb area start -->
<section class="breadcrumb__area box-plr-75">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xxl-12">
                <div class="breadcrumb__wrapper">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home">Trang chính</a></li>
                            <li class="breadcrumb-item active" aria-current="page"><a></a>Danh sách loại phòng</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>


<!-- breadcrumb area end -->
<table class="table table-condensed">

    <div class="dropdown js__drop_down" style="padding-top: 13px">
        <a class="btn btn-info btn-xs waves-effect waves-light" asp-area="Admin" asp-controller="AdminLoaiphongs" asp-action="Create">Add loại phòng</a>
        <!-- /.sub-menu -->
    </div>


    <thead>
        <tr>
            <th>Tên loại phòng</th>
            <th>Chi tiết</th>
            <th>Trạng thái</th>
            <th>Số lượng người</th>
            <th>Đơn giá</th>
            <th>ĐVT</th>
            <th>#</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.TenLp</td>
                    <td>@item.ChitietLp</td>
                    <td>
                        @if (item.TrangthaiLp == true)
                        {
                            <span class="notice notice-blue">Active</span>
                        }
                        else
                        {
                            <span class="notice notice-danger">Block</span>
                        }
                    </td>
                    <td>@item.SlNguoi</td>
                    <td>@item.Dongia.Value.ToString("#,###")</td>
                    <td>@item.MaDvtNavigation.TenDvt</td>
                    <td width="230px">
                        @*<a class="btn btn-info btn-xs waves-effect waves-light" asp-area="Admin" asp-controller="AdminKhachhangs" asp-action="Details" asp-route-id="@item.MaKh">View</a>*@
                        <a class="btn btn-primary btn-xs waves-effect waves-light" asp-area="Admin" asp-controller="AdminLoaiphongs" asp-action="Edit" asp-route-id="@item.MaLp">Edit</a>
                        <a class="btn btn-success btn-xs waves-effect waves-light" asp-area="Admin" asp-controller="AdminLoaiphongs" asp-action="Delete" asp-route-id="@item.MaLp">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
