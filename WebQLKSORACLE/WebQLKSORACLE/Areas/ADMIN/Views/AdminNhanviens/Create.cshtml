@model WebQLKSORACLE.Areas.ADMIN.ModelViews.RegisterAdminVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/ADMIN/Views/Shared/_ADMINLayout.cshtml";
}

<!-- breadcrumb area start -->
<section class="breadcrumb__area box-plr-75">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xxl-12">
                <div class="breadcrumb__wrapper">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                            <li class="breadcrumb-item"><a asp-action="Index">Danh sách nhân viên</a></li>
                            <li class="breadcrumb-item active" aria-current="page"><a></a>Thêm nhân viên</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- breadcrumb area end -->
<div class="col-xs-12">
    <div class="box-content">
        <h4 class="box-title">From tạo tài khoản nhân viên</h4>
        <!-- /.box-title -->
        <!-- /.dropdown js__dropdown -->
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div id="tabsleft" class="tabbable tabs-left">
                <ul>
                    <li><a href="#tabsleft-tab1" data-toggle="tab">First</a></li>

                </ul>
                <div class="tab-content">
                    <div class="tab-pane" id="tabsleft-tab1">
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="emailfield">Tên nhân viên</label>
                                <div class="controls">
                                    <input type="text" asp-for="TenNv" class="form-control">
                                </div>
                                <span asp-validation-for="TenNv" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="namefield">Địa chỉ</label>
                                <div class="controls">
                                    <input type="text" asp-for="DiachiNv" class="form-control">
                                </div>
                                <span asp-validation-for="DiachiNv" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="namefield">Địa chỉ Email</label>
                                <div class="controls">
                                    <input type="email" asp-for="EmailNv" class="form-control">
                                </div>
                                <span asp-validation-for="EmailNv" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="namefield">Số điện thoại</label>
                                <div class="controls">
                                    <input type="number" asp-for="SdtNv" class="form-control">
                                </div>
                                <span asp-validation-for="SdtNv" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="namefield">Mật khẩu</label>
                                <div class="controls">
                                    <input type="password" asp-for="MatkhauNv" class="form-control">
                                </div>
                                <span asp-validation-for="MatkhauNv" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="namefield">Nhập lại mật khẩu</label>
                                <div class="controls">
                                    <input type="password" asp-for="ConfirmMatkhauNv" class="form-control">
                                </div>
                                <span asp-validation-for="ConfirmMatkhauNv" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <select class="form-control" asp-for="RoleId" asp-items="ViewBag.DanhMuc">
                                <option value="" disabled selected>Chọn quyền</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <div class="switch primary">
                                <input type="checkbox" asp-for="TrangthaiNv">
                                <label for="TrangthaiNv">Public</label>
                            </div>
                            <div id="toastTypeGroup">
                                <div class="form-group">
                                    <label>Giới tính</label>
                                </div>
                                <!-- /.form-group -->
                                <div class="radio success">
                                    <input type="radio" asp-for="GioitinhNv" id="radio-1" value="true" checked="">
                                    <label for="radio-1">Nam</label>
                                </div>
                                <!-- /.radio -->
                                <div class="radio info">
                                    <input type="radio" asp-for="GioitinhNv" id="radio-2" value="false">
                                    <label for="radio-2">Nữ</label>
                                </div>
                            </div>

                        </div>

                    </div>


                </div>
            </div>          
            <div class="form-group ">
                <input type="submit" value="Create" class="btn btn-default" />
                <a class="btn btn-default" asp-action="Index">Quay lại danh sách nhân viên</a>
            @*</div>
                <div class="form-group ">
                    <a class="btn btn-default" asp-action="Index">Quay lại danh sách nhân viên</a>
                </div>*@ 
        </form>
    </div>
    <!-- /.box-content -->
</div>

